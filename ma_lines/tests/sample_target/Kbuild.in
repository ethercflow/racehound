module_name=kedr_sample_target

ccflags-y := -g -I$(src)

obj-m := ${module_name}.o
${module_name}-y := cfake.o

# To analyze the kernel code, one should set "-fplugin=..." for the relevant
# files only. Other files will not be affected.
CFLAGS_cfake.o := \
    -fplugin=@PLUGIN_PATH@ \
    -fplugin-arg-@PLUGIN_NAME@-file=@CMAKE_CURRENT_BINARY_DIR@/ma_lines_out.list
